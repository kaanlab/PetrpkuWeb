@inject HttpClient HttpClient


<h4>Дни рождения c @FirstDayOfWeek по @LastDayOfWeek:</h4>
<ForeachTemplate Loader="@LoadBirthdaysForWeek">
    <LoadingContent>
        <div class="spinner-border text-primary text-center" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </LoadingContent>
    <EmptyContent>
        <div class="card border-danger mb-3">
            <div class="card-body">
                <p class="card-text">именинников нет</p>
            </div>
        </div>
    </EmptyContent>
    <ItemContent Context="item">
        <div class="card mb-2">
            <img src="@item.PhotoUrl" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@item.LastName</h5>
                <span class="badge badge-info">@item.Birthday.Day-ого числа</span>
                <p class="card-text"><small class="text-muted">@item.WorkingPosition</small></p>
            </div>
        </div>
    </ItemContent>
</ForeachTemplate>


@code {

    public string FirstDayOfWeek { get; set; } = DateTime.Now.FirstDayOfWeek().ToShortDateString();
    public string LastDayOfWeek { get; set; } = DateTime.Now.LastDayOfWeek().ToShortDateString();

    public async Task<List<UserInfo>> LoadBirthdaysForWeek()
    {
        return await HttpClient.GetJsonAsync<List<UserInfo>>("api/users/birthdaysweek");
    }
}
